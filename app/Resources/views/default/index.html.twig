{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>{{ 'Welcome to the'|trans({}, 'Dev')}} <span>Skywox</span></h1>
                <p>{{ 'Page is under construction'|trans({}, 'Dev')}}.</p>
                <img src="/uc.png" style="width: 200px; float: right; margin-top: -130px">
                <a href="{{ path('sonata_admin_dashboard') }}">{{ 'Go to the backend'|trans({}, 'Dev') }}</a>
                <a href="{{ path('account') }}">{{ 'Go to the account page'|trans({}, 'Dev') }}</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1 { line-height: 1.2; margin: 0 0 .5em; font-size: 36px; }
    h1 span { color: #002a80; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome { margin-bottom: 1em; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
    }
</style>
{% endblock %}
